<%= form_for(check) do |f| %>
  <% if check.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(check.errors.count, "error") %> prohibited this check from being saved:</h2>

      <ul>
      <% check.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <% if @balance %>
      <b>Balance: <%= number_with_delimiter(@balance) %> SC</b> (<%= link_to 'clear', new_check_path %>)
    <% else %>
      (one address per line) <%= f.submit 'Check Balance' %>
    <% end %>
  </div>

  <div class="field">
    <%= f.text_area :addresses, cols: "88", rows: "25" %>
  </div>
<% end %>
